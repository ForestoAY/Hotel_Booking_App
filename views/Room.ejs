<%- include('partials/Header', {title: "List Room", user}) %>
<%- include('partials/Navbar') %>
<style>
  .container {
      text-align: center;
  }
</style>
  <div class="container d-flex" style="margin: auto;">
    <div class="container" style="margin: auto;">
      <div class="card" style="width: 30rem; border-radius: 5px;">
        <img src="<%= data.hotelUrl %>" class="card-img-top" alt="not loading" style="border-radius: 10px;">
        <div class="card-body">
          <h5 class="card-title"><%= data.name %></h5>
          <p class="card-text"><%= data.description %></p>
        </div>
      </div>
    </div>
    <div class="container" style="margin: auto; border-radius: 5px;">
      <div class="d-flex flex-column">
        <% data.Rooms.forEach((e) => { %>
          <div class="d-flex mb-3" style="background-color: #fff; border-radius: 10px;">
            <img src="<%= e.roomUrl %>" class="card-img-top" alt="not loading" style="height: 12rem; width: 20rem; border-radius: 5px;">
            <div class="ms-3 card-body" >
              <h5 class="card-title"><%= e.type %></h5>
              <p class="card-text">Room: <%= e.roomNumber %></p>
              <p class="card-text">Price: <%= e.priceToRupiah %></p>
              <p class="card-text">Status: <%= e.status %></p>
              <a href="/hotel/detail/<%= user.id %>/booking/<%= e.id %>" class="<%= e.status == 'Available' ? 'btn btn-success' : 'btn btn-danger' %>">Reserve Room</a>
            </div>
          </div>
        <%}) %>
      </div>
    </div>
  </div>
<%- include('partials/Footer') %>

