<%- include('partials/HeaderIsLogin', {title: "List Room", user}) %>

<%- include('partials/Navbar') %>
  <div class="container d-flex justify-content-between">
    <div class="container">
      <div class="card" style="width: 30rem;">
        <img src="<%= data.hotelUrl %>" class="card-img-top" alt="not loading">
        <div class="card-body">
          <h5 class="card-title"><%= data.name %></h5>
          <p class="card-text"><%= data.description %></p>
        </div>
      </div>
    </div>
    <div class="container" style="height: 90vh;">
      <div class="d-flex flex-column" style="background-color: #fff">
        <% data.Rooms.forEach((e) => { %>
          <div class="d-flex mb-3">
            <img src="<%= e.roomUrl %>" class="card-img-top" alt="not loading" style="height: 10rem; width: 20rem;">
            <div class="ms-3 card-body">
              <h5 class="card-title"><%= e.type %></h5>
              <p class="card-text">Room: <%= e.roomNumber %></p>
              <p class="card-text">Price: <%= e.priceToRupiah %></p>
              <p class="card-text">Status: <%= e.status %></p>
              <a href="/hotel/detail/<%= e.id %>/reserve" class="<%= e.status == 'Available' ? 'btn btn-success' : 'btn btn-danger' %>">Reserve Room</a>
            </div>
          </div>
        <%}) %>
      </div>
    </div>
  </div>
<%- include('partials/Footer') %>

