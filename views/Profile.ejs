<%- include('partials/HeaderIsLogin', {title: "Profile", user}) %>
<style>
  .parent-container {
    height: 85vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .container1 {
    display: flex;
    height: 294px;
    width: 240px;
    color: white;
    perspective: 800px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    justify-content: center;
    align-items: center;
  }

  .card {
    width: 100%;
    height: 100%;
    background: black;
    border-radius: 2rem;
    position: relative;
    transition: transform 1500ms;
    transform-style: preserve-3d;
  }

  .card-top {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 10%;
    position: absolute;
    width: 50%;
    background-color: transparent;
    border: 2px solid black;
    top: 0;
    border-top: none;
    border-radius: 0 0 1rem 1rem;
    box-shadow: 0px 0px 10px 5px rgba(255, 166, 0, 0.7);
  }

  .card-top-para {
    font-size: 16px;
    font-weight: bold;
  }

  .container1:hover > .card {
    cursor: pointer;
    transform: rotateX(180deg) rotateZ(-180deg);
  }

  .front,
  .back {
    height: 100%;
    width: 100%;
    border-radius: 2rem;
    box-shadow: 0px 0px 10px 5px rgba(255, 166, 0, 0.7);
    position: absolute;
    backface-visibility: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 20px;
  }

  .back {
    background-color: black;
    transform: rotateX(180deg) rotateZ(-180deg);
  }

  .heading {
    font-size: 22px;
    font-weight: bold;
  }

  .follow {
    font-size: 16px;
    font-weight: 500;
  }

  .icons {
    display: flex;
    flex-direction: row;
    gap: 20px;
    margin-top: 20px;
  }
  
  footer {
    background-color: #f1f1f1;
    padding: 20px;
    text-align: center;
    margin-top: auto; 
  }

  footer .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .text {
    color: orange;
  }
</style>
<%- include('partials/Navbar') %>
<% if(!data.Profile) { %>
  <div class="container">
    <form action="/profile/<%= data.id %>/add" method="post">
      <div class="mb-3">
        <label for="" class="form-label">Description</label>
        <input type="text" class="form-control" name="descriptionUser">
      </div>
      <div class="mb-3">
        <label for="" class="form-label">Age</label>
        <input type="number" class="form-control" name="age">
      </div>
      <div class="mb-3">
        <label for="" class="form-label">Gender</label>
        <input type="text" class="form-control" name="gender">
      </div>
      <button type="submit">Submit</button>
    </form>
  </div>
<%} else { %>
  <div class="parent-container">
    <div class="container1">
      <div class="card">
        <div class="front">
          <div class="card-top">
            <p class="card-top-para text mt-3">Profile</p>
          </div>
          <svg class="mt-2" xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="orange" class="bi bi-person-circle" viewBox="0 0 16 16">
            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"></path>
            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"></path>
          </svg>
          <p class="heading text"><%= data.username %></p>
          <p class="follow text"><%= data.email %></p>
        </div>
        <div class="back">
          <p class="follow text"><%= data.Profile.descriptionUser %></p>
          <p class="follow text">Age: <%= data.Profile.age %></p>
          <p class="follow text">Gender: <%= data.Profile.gender %></p>
        </div>
      </div>
    </div>
  </div>

<% }%>


<%- include('partials/Footer') %>