<%- include('partials/Header', {title: "User List", user}) %>
<%- include('partials/Navbar') %>
<% if (errors){ %>
    <div class="alert alert-danger mt-3" role="alert">
      <%= errors %>
    </div>
  <%} %>
  <div class="container mt-5">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>No</th>
          <th>Username</th>
          <th>Role</th>
          <th>ACtion</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach((e, i) => {%>
          <tr>
            <td><%= i+1 %></td>
            <td><%= e.username %></td>
            <td><%= e.role %></td>
            <td>
              <a class="btn btn-danger" href="/users/<%= e.id %>/delete">Delete</a>
            </td>
          </tr>
        <%}) %> 
      </tbody>
    </table>
  </div>
<%- include('partials/Footer') %>